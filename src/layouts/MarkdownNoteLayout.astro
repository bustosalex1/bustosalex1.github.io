---
/**
 * A layout for rendering posts written in Markdown or MDX (so... all of them right now).
 */
import FormattedDate from "@components/FormattedDate.astro";
import NoteLayout from "./NoteLayout.astro";
import NoteMenu from "@components/NoteMenu.astro";
const { data } = Astro.props;
---

<NoteMenu>
    <NoteLayout pageTitle={data.title}>
        <article
            class="prose prose-img:rounded-md prose-img:my-0 text-justify leading-snug mx-auto pb-20 prose-h3:m-0 w-full"
        >
            <h2 class="text-left py-0 px-0 my-1">
                {data.title}
            </h2>
            <div class="not-prose flex flex-row items-center mb-2">
                <div class="my-1">
                    <FormattedDate date={data.pubDate} posted />
                </div>
                <div class="divider divider-horizontal mx-2"></div>
                <div class="text-sm">
                    {data.class}
                </div>
            </div>
            <slot />
        </article>
    </NoteLayout>
</NoteMenu>

<!-- styling to make images with captions look nice -->
<style is:global>
    img + em {
        @apply flex;
        @apply justify-center;
    }
</style>
