---
import FormattedDate from "../components/FormattedDate.astro";
import Tag from "../components/Tag.astro";
import BaseLayout from "./BaseLayout.astro";
const { data } = Astro.props;
---

<BaseLayout pageTitle={data.title}>
    <article
        class="prose prose-img:rounded-md prose-img:my-1 text-justify leading-normal mx-auto"
    >
        <h2 class="text-left py-0 px-0 my-1">
            {data.title}
        </h2>
        <div class="not-prose flex flex-row items-center">
            <div class="my-1">
                <FormattedDate date={data.pubDate} posted />
            </div>
            <div class="divider divider-horizontal mx-2"></div>
            <div class="flex gap-2 flex-row flex-wrap">
                {data.tags.map((tag: any) => <Tag tag={tag} />)}
            </div>
        </div>
        <slot />
    </article>
</BaseLayout>

<style is:global>
    img + em {
        @apply flex;
        @apply justify-center;
    }
</style>
