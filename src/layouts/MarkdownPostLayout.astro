---
import BaseLayout from "./BaseLayout.astro";
const { frontmatter } = Astro.props;
---

<BaseLayout pageTitle={frontmatter.title}>
    <div class="text-sm breadcrumbs py-0">
        <ul>
            <li><a href="/">Posts</a></li>
            <li>{frontmatter.title}</li>
        </ul>
    </div>
    <h1 class="text-2xl font-bold ">{frontmatter.title}</h1>
    <article class="prose text-justify leading-normal mx-auto">
        <slot />
    </article>
</BaseLayout>

<style>
    a {
        color: #00539f;
    }

    .tags {
        display: flex;
        flex-wrap: wrap;
        margin: 0 auto;
    }

    .tag {
        margin: 0.25em;
        border: dotted 1px #a1a1a1;
        border-radius: 0.5em;
        padding: 0.5em 1em;
        font-size: 1.15em;
        background-color: #f8fcfd;
    }
</style>
