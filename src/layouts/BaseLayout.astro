---
/**
 * The basic layout that wraps all pages, including MarkdownPostLayout.astro.
 * This just provides consistent theming and spacing around the edges of each
 * page. Also persists the header and footer across pages.
 */
import Footer from "@components/Footer.astro";
import Header from "@components/Header.astro";
import "@styles/global.css";
import "@fontsource/fira-code";
import "katex/dist/katex.min.css";

interface Props {
    pageTitle: string;
    fullWidth?: boolean;
}

const { pageTitle, fullWidth } = Astro.props;
---

<html lang="en" id="html-root" class="bg-background">
    <head>
        <meta charset="utf-8" />
        <link rel="icon" type="image/svg+xml" href="/favicon.png" />
        <meta name="viewport" content="width=device-width" />
        <meta name="generator" content={Astro.generator} />
        <title>Alex Bustos | {pageTitle}</title>
        <script>
            document.addEventListener("DOMContentLoaded", () => {
                const html = document.getElementById(
                    "html-root",
                ) as HTMLElement;
                const theme = localStorage.getItem("theme");
                if (theme === "dark") {
                    html.classList.add("dark");
                }
            });
        </script></head
    >

    <body>
        <div
            class={`flex flex-col w-[90vw] ${fullWidth ? "lg:w-[90vw]" : "lg:w-[50vw]"} mx-auto my-3 space-y-2`}
        >
            <Header />
            <slot />
            <Footer />
        </div>
    </body>
</html>
