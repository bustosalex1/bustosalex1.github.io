---
/**
 * Clickable card providing an image, title, short description, and date of a
 * project from the `posts` content collection. This component is used on the
 * `projects` page (which is the current index of the site) to display
 * information about all projects in the `posts` content collection.
 */
import { Image } from "astro:assets";
import type { CollectionEntry } from "astro:content";
import FormattedDate from "@components/FormattedDate.astro";
interface Props {
    post: CollectionEntry<"posts">;
}

const { post }: Props = Astro.props;
---

<a href={"/posts/" + post.id}>
    <div
        class="transition ease-in-out w-full duration-300 group flex flex-row border-neutral-400 hover:border-primary bg-background border hover:-translate-y-1 hard-shadow hover:hard-shadow-hover overflow-hidden h-40"
    >
        <Image
            src={post.data.image}
            alt={post.data.imageAlt}
            class="aspect-square"
        />
        <div
            class="flex flew-row w-full duration-300 ease-in-out transition-all group-hover:border-primary"
        >
            <h1 class="font-bold text-sm font-mono">{post.data.title}</h1>
            <div class="ml-auto">
                <FormattedDate date={post.data.pubDate} />
            </div>
        </div>
    </div>
    <div
        class="p-3 flex flex-col grow duration-300 ease-in-out transition-all group-hover:border-primary"
    >
        <h1
            class="font-bold group-hover:text-primary transition ease-in-out duration-300"
        >
            {post.data.title}
        </h1>
        <p class="transition ease-in-out duration-300 grow">
            {post.data.description}
        </p>
        <div class="self-end pt-4">
            <FormattedDate date={post.data.pubDate} />
        </div>
    </div>
</a>
