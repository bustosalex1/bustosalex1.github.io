---
import { Image } from "astro:assets";
import type { CollectionEntry } from "astro:content";
interface Props {
    post: CollectionEntry<"posts">;
}

const { post } = Astro.props;
---

<div
    class="transition ease-in-out card card-compact w-full bg-base-100 shadow-xl hover:shadow-2xl hover:-translate-y-1 duration-300 outline outline-1 outline-neutral-400"
>
    <figure>
        <Image src={post.data.image} alt={post.data.imageAlt} />
    </figure>
    <div class="card-body">
        <a href={"/posts/" + post.slug}>
            <h2 class="card-title hover:underline">
                {post.data.title}
            </h2></a
        >
        <p>{post.data.description}</p>
        <div class="card-actions justify-end">
            <div class="text-xs font-mono">
                {
                    post.data.pubDate.toLocaleDateString("en-US", {
                        year: "numeric",
                        month: "2-digit",
                        day: "2-digit",
                    })
                }
            </div>
        </div>
    </div>
</div>
