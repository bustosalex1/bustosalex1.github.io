---
/**
 * Component providing consistent date formatting across project.
 */
interface Props {
    date: Date;
    posted?: boolean;
}

const { date, posted } = Astro.props;
---

<div
    class="text-sm font-mono whitespace-nowrap text-content group-hover:text-white"
>
    {posted ? "Posted " : ""}
    {
        date.toLocaleDateString("en-US", {
            year: "numeric",
            month: "2-digit",
            day: "2-digit",
            timeZone: "UTC",
        })
    }
</div>
