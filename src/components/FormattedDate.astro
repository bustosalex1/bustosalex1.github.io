---
/**
 * Component providing consistent date formatting across project.
 */
interface Props {
    date: Date;
    posted?: boolean;
    class?: string;
}

const { date, posted, class: className } = Astro.props;
---

<div
    class={`text-xs whitespace-nowrap font-mono ${className ?? "text-ink-tertiary"}`}
>
    {posted ? "Posted " : ""}
    {
        date.toLocaleDateString("en-US", {
            year: "numeric",
            month: "2-digit",
            day: "2-digit",
            timeZone: "UTC",
        })
    }
</div>
