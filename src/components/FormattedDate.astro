---
interface Props {
    date: Date;
    posted?: boolean;
}

const { date, posted } = Astro.props;
---

<div class="text-xs font-mono">
    {posted ? "Posted " : ""}
    {
        date.toLocaleDateString("en-US", {
            year: "numeric",
            month: "2-digit",
            day: "2-digit",
            timeZone: "UTC",
        })
    }
</div>
