---
/**
 * Component providing links to main pages on my website. New links and their
 * slugs can be added in the `links` variable. This component also displays the
 * title of the website (my name) and the theme toggle.
 */
import ThemeToggle from "@components/ThemeToggle.svelte";
let currentPage = Astro.url.pathname;
const links = [
    ["Projects", "/"],
    ["Quotes I Like", "/experiments/quotes"],
];
---

<div
    class="flex flex-row w-full items-stretch border-default-outline border hard-shadow h-10 dark:bg-alt-background bg-background"
>
    <a
        href="/"
        class="font-bold whitespace-nowrap text-content transition-all duration-150 hover:bg-primary content-center px-2 sm:px-4 hover:text-white"
    >
        Alex Bustos
    </a>
    {
        links.map(([title, link]) => {
            return (
                <a
                    href={link}
                    class={`px-2 sm:px-4 border-l last-of-type:grow sm:last-of-type:grow-0 text-center last-of-type:border-r border-default-outline content-center hover:text-white hover:bg-primary transition-all duration-150 ${currentPage === link ? "bg-primary text-white" : "text-content"}`}
                >
                    {title}
                </a>
            );
        })
    }

    <!-- this div is to space the `ThemeToggle` and `SearchToggle` to be at the opposite end of the flex box -->
    <div class="sm:visible sm:grow sm:border-r sm:border-default-outline"></div>
    <ThemeToggle client:only />
</div>
