---
/**
 * Component providing links to main pages on my website. New links and their
 * slugs can be added in the `links` variable. This component also displays the
 * title of the website (my name) and the theme toggle.
 */
import ThemeToggle from "@components/ThemeToggle.svelte";
import Search from "./Search.svelte";
import Menu from "~icons/line-md/menu";
import { getCollection } from "astro:content";
const allNotes = (await getCollection("notes")).filter(
    (note) => !note.data.draft,
);

const noteSearchKeys = ["body", "data.title"];
let currentPage = Astro.url.pathname;
const links = [
    ["Projects", "/"],
    ["Notes", "/notes/"],
];
---

<div class="flex flex-row w-full items-center">
    <!-- only render "Alex Bustos" when we're not on the notes page -->
    {
        currentPage.includes("notes") ? (
            <label
                for="notes-drawer"
                class="drawer-button lg:hidden shrink-0 mr-5  bg-none cursor-pointer hover:text-primary transition-all duration-300"
            >
                <Menu class="w-5 h-5" />
            </label>
        ) : (
            <a
                href="/"
                class="font-bold whitespace-nowrap pr-5 text-content transition-all duration-300 hover:text-primary"
            >
                Alex Bustos
            </a>
        )
    }

    {
        links.map(([title, link]) => {
            return (
                <a
                    href={link}
                    class={`pr-5 hover:text-primary transition-all duration-300 ${currentPage === link ? "text-primary underline" : "text-content"}`}
                >
                    {title}
                </a>
            );
        })
    }

    <!-- this div is to space the ThemeToggle to be at the opposite end of the flex box -->
    {
        currentPage === "/notes/" || !currentPage.includes("notes") ? (
            <div class="grow" />
        ) : (
            <div class="w-full pr-5">
                <Search
                    posts={allNotes}
                    keys={noteSearchKeys}
                    dropdown={true}
                    client:load
                />
            </div>
        )
    }

    <div class="flex items-center">
        <ThemeToggle client:only />
    </div>
</div>
