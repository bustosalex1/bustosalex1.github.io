{
    "extends": "astro/tsconfigs/strict",
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@components/*": ["src/components/*"],
            "@types": ["src/types/"],
            "@layouts/*": ["src/layouts/*"],
            "@assets/*": ["src/assets/*"],
            "@styles/*": ["src/styles/*"]
        },
        "types": ["unplugin-icons/types/astro"],
        "plugins": [
            {
                "name": "@astrojs/ts-plugin"
            }
        ]
    }
}
