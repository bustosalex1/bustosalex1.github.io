{
    "name": "website",
    "type": "module",
    "version": "0.4",
    "packageManager": "pnpm@9.4.0",
    "scripts": {
        "stamp": "echo \"COMMIT_HASH=$(git rev-parse --short HEAD)\"> .env && echo \"WEBSITE_VERSION=$(node -p \"require('./package.json').version\")\">>.env",
        "dev": "astro dev",
        "start": "astro dev",
        "build": "pnpm stamp && astro build",
        "preview": "astro preview",
        "astro": "astro",
        "format": "prettier . --write",
        "lint": "prettier --check . && eslint . && svelte-check --tsconfig ./tsconfig.json"
    },
    "dependencies": {
        "@fontsource/crimson-text": "^5.2.7",
        "@fontsource/fira-code": "^5.2.7",
        "katex": "^0.16.28"
    },
    "devDependencies": {
        "@astrojs/mdx": "^4.3.13",
        "@astrojs/sitemap": "^3.7.0",
        "@astrojs/svelte": "^7.2.5",
        "@astrojs/ts-plugin": "^1.10.6",
        "@iconify-json/carbon": "^1.2.18",
        "@iconify-json/line-md": "^1.2.11",
        "@iconify-json/material-symbols": "^1.2.55",
        "@iconify-json/octicon": "^1.2.20",
        "@tailwindcss/typography": "^0.5.19",
        "@tailwindcss/vite": "^4.1.18",
        "@types/eslint": "^9.6.1",
        "@types/hast": "^3.0.4",
        "astro": "^5.17.1",
        "eslint": "^9.39.2",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-svelte": "^3.15.0",
        "globals": "16.0.0",
        "prettier": "^3.8.1",
        "prettier-plugin-astro": "^0.14.1",
        "prettier-plugin-svelte": "^3.4.1",
        "rehype-katex": "^7.0.1",
        "remark-math": "^6.0.0",
        "sharp": "^0.33.5",
        "svelte": "^5.50.1",
        "svelte-check": "^4.3.6",
        "tailwindcss": "^4.1.18",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.55.0",
        "unist-util-visit": "^5.1.0",
        "unplugin-icons": "^22.5.0",
        "vite": "^6.4.1"
    }
}
